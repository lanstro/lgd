<% if(level <= 5){ %>
	<h2><%= content %><a href="#">edit</a></h2>
<% } else { %>
	<% if(level <= 9){ %>
		<table><tbody>
			<tr>
				<td class="table_numeral"><p>(<%= number %>)</p></td>
				<td class="table_content"><p> <%= strip_number %><a href="#">edit</a></p></td>
			</tr>
		</tbody></table>
	<% } else { %>
		<% if(special_paragraph){ %>
			<p class=<%= special_paragraph %>><%= content %><a href="#">edit</a></p>
		<% } else { %>
			<p><%= content %><a href="#">edit</a></p>
		<% } %>
	<% } %>
<% } %>

